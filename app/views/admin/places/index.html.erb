<!-- 管理者側寺社投稿ページのコンテナ -->
<div class="container">
  <!--行を示す要素で、内部のコンテンツを行内に配置-->
  <div class="row">
    <!-- 左側のコラム (幅: 5カラム) -->
    <div class="col-md-8">
      <h2 class="text-center">admin/place/index</h2>
      <!--寺社一覧を繰り返し表示-->
      <% @places.each do |place| %>
        <div class="card mb-5">
          <div class="card-header">
            <h5 class="card-text text-center">
              <%= link_to admin_place_path(place) do %>
                <%= place.name %>
              <% end %>
            </h5>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
